package com.amadeus.droolsfeature;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.InputStream;
import org.drools.decisiontable.InputType;
import org.drools.decisiontable.SpreadsheetCompiler;

public class DecisionTableTools {
	private String path = System.getProperty("user.dir") + "/src/main/resources/com/amadeus/rules/";
	public static void main(String args[]) {
		// create an input stream
		InputStream is = null;
		try {
			// assign the excel to the input stream
			// mention the local directory path where your excel is kept
			// you can take any decision table (excel sheet) for testing
			is = new FileInputStream(System.getProperty("user.dir") + "/src/main/resources/com/amadeus/rules/ruleTemplate.xls");
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		// create compiler class instance
		SpreadsheetCompiler sc = new SpreadsheetCompiler();
		// compile the excel to generate the (.drl) dossier
		String drl = sc.compile(is, InputType.XLS);
		// check the generated (.drl) dossier
		System.out.println("Generate DRL file is â€“: ");
		System.out.println(drl);
	}
}
